@model vrmninkosesi.Models.Post

@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <!-- BAŞLIK -->
        <h1 class="mb-4">@Model.Title</h1>

        <!-- YAZI İÇERİĞİ -->
        <div class="fs-5 mb-5" style="white-space: pre-line; line-height: 1.8;">
            @Model.Content
        </div>

        <!-- YAYIN BİLGİLERİ -->
        <div class="text-muted border-top pt-3 mb-5">
            @if (!string.IsNullOrEmpty(Model.Category))
            {
                <span class="badge bg-secondary me-2">@Model.Category</span>
            }

            <span>
                @Model.CreatedDate.ToString("dd MMMM yyyy")
            </span>
        </div>

        <!-- YORUM FORMU -->
        <hr class="my-4" />

        <h4>Yorum Yap</h4>

        <form asp-controller="Comments" asp-action="Create" method="post">
            <input type="hidden" name="postId" value="@Model.Id" />

            <div class="mb-3">
                <input name="authorName" class="form-control" placeholder="Adınız" />
            </div>

            <div class="mb-3">
                <textarea name="content" class="form-control" rows="4" placeholder="Yorumunuz"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>

        <!-- YORUMLAR -->
        <h4 class="mb-3">Yorumlar</h4>

        @if (Model.Comments != null && Model.Comments.Any())
        {
            foreach (var comment in Model.Comments)
            {
                <div class="border rounded p-3 mb-3">
                    <strong>@comment.AuthorName</strong>
                    <div class="mt-2" style="white-space: pre-line;">
                        @comment.Content
                    </div>
                    <small class="text-muted d-block mt-2">
                        @comment.CreatedDate.ToString("dd MMMM yyyy")
                    </small>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Henüz yorum yapılmamış.</p>
        }

        

    </div>
</div>


